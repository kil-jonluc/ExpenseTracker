@model ExpenseTracker.Models.User

@{
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>

<a href="@Url.ActionLink("NewExpense", "Expense")" type="button" class="btn btn-primary btn-lg btn-block">Enter New Expense</a>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.User.FirstName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.User.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.email)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.User.email
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.userName)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.User.userName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.phoneNumber)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.User.phoneNumber
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SSN)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.User.SSN
        </dd>
    </dl>
</div>

<a href="@Url.ActionLink("EditUser")" type="button" class="btn btn-primary btn-lg btn-block">Edit User</a>

