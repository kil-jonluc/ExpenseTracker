@model ExpenseTracker.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>
<div class="row">
    <div class="offset-3 col-lg-3">
        <a href="@Url.ActionLink("Create", "Expense")" type="button" class="btn btn-primary btn-lg btn-block">Enter New Expense</a>
    </div>
    <div class="col-lg-3">
        <a href="@Url.ActionLink("Index", "Expense")" type="button" class="btn btn-primary btn-lg btn-block">View Expenses</a>
    </div>
</div>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Model.User.FirstName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.LastName)
        </dt>
        <dd class="col-sm-10">
            @Model.User.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.email)
        </dt>
        <dd class="col-sm-10">
            @Model.User.email
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.userName)
        </dt>
        <dd class="col-sm-10">
            @Model.User.userName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.phoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Model.User.phoneNumber
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.SSN)
        </dt>
        <dd class="col-sm-10">
            @Model.User.SSN
        </dd>
    </dl>
</div>
<div>
    <div>
        <h4>Employer Information</h4>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employer.CompanyName)
        </dt>
        <dd class="col-sm-10">
            @Model.Employer.CompanyName
        </dd>
    </dl>
</div>
<div>
    @using (Html.BeginForm("EditUser", "User", FormMethod.Get))
    {
        @Html.HiddenFor(m => m.User.IDNumber)
        <input type="submit" class="btn btn-primary btn-lg btn-block" value="Edit Account Information" />
        @*<a href="@Url.ActionLink("EditUser")" type="button" class="btn btn-primary btn-lg btn-block" >Edit User</a>*@
    }


</div>

